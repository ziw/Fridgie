<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15" android:text=" - "
        android:id="@+id/minus_button"/>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:textColor="#001cff"
        android:id="@+id/inv_list_item_text" />

    <Button
        android:layout_width="0dp" android:id="@+id/delete_button"
        android:layout_height="match_parent" android:layout_weight="0.15" android:text=" X " />

</LinearLayout>